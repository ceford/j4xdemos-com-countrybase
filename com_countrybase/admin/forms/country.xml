<?xml version="1.0" encoding="UTF-8"?>
<form>

		<field
			name="title"
			type="text"
			label="COM_COUNTRYBASE_COUNTRY_TITLE"
			required="true"
			maxlength="128"
		/>

		<field
			name="iso_2"
			type="text"
			label="COM_COUNTRYBASE_COUNTRY_ISO_2"
			description="COM_COUNTRYBASE_COUNTRY_ISO_2_DESC"
			required="true"
			maxlength="3"
		/>

		<field
			name="iso_3"
			type="text"
			label="COM_COUNTRYBASE_COUNTRY_ISO_3"
			description="COM_COUNTRYBASE_COUNTRY_ISO_3_DESC"
			required="true"
			maxlength="3"
		/>

		<field
			name="country_code"
			type="text"
			label="COM_COUNTRYBASE_COUNTRY_CODE"
			description="COM_COUNTRYBASE_COUNTRY_CODE_DESC"
			required="true"
			maxlength="3"
		/>

		<field
			name="region_code"
			type="text"
			label="COM_COUNTRYBASE_COUNTRY_REGION_CODE"
			description="COM_COUNTRYBASE_COUNTRY_REGION_CODE_DESC"
			required="true"
			maxlength="3"
		/>

		<field
			name="subregion_code"
			type="text"
			label="COM_COUNTRYBASE_COUNTRY_SUBREGION_CODE"
			description="COM_COUNTRYBASE_COUNTRY_SUBREGION_CODE_DESC"
			required="true"
			maxlength="3"
		/>

		<field
			name="phone_prefix"
			type="text"
			label="COM_COUNTRYBASE_COUNTRY_PHONE_PREFIX"
			description="COM_COUNTRYBASE_COUNTRY_PHONE_PREFIX_DESC"
			required="true"
			maxlength="3"
		/>

		<field
			name="currency_code"
			type="text"
			label="COM_COUNTRYBASE_COUNTRY_CURRENCY_CODE"
			description="COM_COUNTRYBASE_COUNTRY_CURRENCY_CODE_DESC"
			required="true"
			maxlength="3"
		/>

		<field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			class="form-select-color-state"
			default="1"
			validate="options"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

</form>