<?xml version="1.0" encoding="UTF-8"?>
<form>

		<field
			name="title"
			type="text"
			label="COM_COUNTRYBASE_CURRENCY_TITLE"
			required="true"
			maxlength="128"
		/>

		<field
			name="currency_code"
			type="text"
			label="COM_COUNTRYBASE_CURRENCY_CURRENCY_CODE"
			description="COM_COUNTRYBASE_CURRENCY_CURRENCY_CODE_DESC"
			required="true"
			maxlength="3"
		/>

		<field
			name="symbol"
			type="text"
			label="COM_COUNTRYBASE_CURRENCY_SYMBOL"
			description="COM_COUNTRYBASE_CURRENCY_SYMBOL_DESC"
			required="true"
			maxlength="10"
		/>

		<field
			name="numeric_code"
			type="text"
			label="COM_COUNTRYBASE_CURRENCY_NUMERIC_CODE"
			description="COM_COUNTRYBASE_CURRENCY_NUMERIC_CODE_DESC"
			required="true"
			maxlength="3"
		/>

		<field
			name="dollar_exchange_rate"
			type="text"
			label="COM_COUNTRYBASE_CURRENCY_DOLLAR_EXCHANGE_RATE"
			description="COM_COUNTRYBASE_CURRENCY_DOLLAR_EXCHANGE_RATE_DESC"
			required="true"
			maxlength="10"
		/>

		<field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			class="form-select-color-state"
			default="1"
			validate="options"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

</form>